---
// import HeaderLink from "./HeaderLink.astro";
import { SITE_DESCRIPTION } from "../consts";
import LastFm from "./react/LastFm.jsx";
---

<header>
  <div>
    <a href="/">
      <h1 id="headerTitle">
        Óscar A. Montiel | <span id="headerSubtitle">{SITE_DESCRIPTION}</span>
      </h1>
    </a>
    <LastFm client:load />
  </div>
  <!-- <nav>
    <HeaderLink href="/">Home</HeaderLink>
    <HeaderLink href="/projects">Projects</HeaderLink>
    <HeaderLink href="/blog">Blog</HeaderLink>
    <HeaderLink href="/about">About</HeaderLink>
    <HeaderLink href={TWITTER_PROFILE} target="_blank">Twitter</HeaderLink>
  </nav> -->
</header>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Montserrat:wght@700&family=Raleway&display=swap");
  #headerTitle {
    font-size: 1.4rem;
    font-weight: 700;
    margin: 0;
    padding: 0;
    line-height: 1.2;
    font-family: "Montserrat", sans-serif;
    user-select: none;
  }

  #headerSubtitle {
    font-family: "Raleway", sans-serif;
    font-weight: 400;
  }

  h1 {
    margin: 0.5em 0;
    color: #fdfefe; /* El color del texto cuando el mouse está encima */
    transition: color 0.25s ease-out; /* Configura la transición para el color */
    cursor: pointer;
  }
  h1:hover {
    /* color: #8b0000; El color inicial del texto */
    color: red;
  }

  nav {
    padding-top: 1rem;

    font-size: 1em;
    font-style: italic;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  nav a {
    color: #fdfefe;
  }

  header {
    margin: 1rem;
  }

  header a {
    text-decoration: none;
  }
</style>
