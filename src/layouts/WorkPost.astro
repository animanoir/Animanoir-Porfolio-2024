---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import ModifiedHeader from "../components/ModifiedHeader.astro";
import { Picture } from "astro:assets";
import Navbar from "../components/Navbar.astro";

type Props = CollectionEntry<"works">["data"];

const { title, description, heroImage, tools } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead
      title={`${title} by Ã“scar A. Montiel | Creative Software Engineer`}
      description={description}
    />
  </head>
  <body>
    <ModifiedHeader />
    <Navbar />
    <article class="articleContainer">
      {
        heroImage && (
          <Picture
            src={heroImage}
            alt={description}
            quality={"max"}
            class="heroImage"
            formats={["webp"]}
            decoding="async"
            loading="lazy"
          />
        )
      }
      <h1 class="title">{title}</h1>
      <div class="tools">
        {
          tools?.map((tool, index) => (
            <span style={{ marginRight: "10px" }} key={index}>
              {tool}
            </span>
          ))
        }
      </div>
      <div class="articleBody">
        <slot />
      </div>
    </article>
    <style>
      .heroImage {
        height: 520px;
        object-fit: cover;
        width: 100%;
        padding-bottom: 2rem;
      }

      .title {
        margin: 0;
        padding-bottom: 0.5rem;
        font-size: 4rem;
        text-align: center;
        font-family: "Montserrat", sans-serif;
        line-height: 1;
      }

      .tools {
        display: block;
        text-align: center;
        font-family: "Open Sans", sans-serif;
        font-size: 0.8rem;
        color: #fdfefe7f;
        padding-bottom: 2rem;
        font-style: italic;
      }

      .articleContainer {
        padding-bottom: 5rem;
        margin: 0 auto;
        position: relative;
        width: 50%;
      }

      .articleBody {
        font-family: "Open Sans", sans-serif;
        color: #fdfefe;
        padding: 0 6rem;
        font-size: 1rem;
      }

      hr {
        border-top: 1px solid #ddd;
        margin: 1rem 0;
      }

      @media (max-width: 768px) {
        .title {
          font-size: 2.5rem;
        }
        .articleContainer {
          width: 100%;
        }
        .articleBody {
          padding: 0 1rem;
        }
      }
    </style>
  </body>
</html>
