---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import ModifiedHeader from "../components/ModifiedHeader.astro";
import { Picture } from "astro:assets";
import Navbar from "../components/Navbar.astro";

type HeroImage = {
  src: string;
  width: number;
  height: number;
  format: "png" | "jpg" | "jpeg" | "tiff" | "webp" | "gif" | "svg" | "avif";
};

type Props = CollectionEntry<"works">["data"] & {
  heroImage: HeroImage;
};

const { title, description, heroImage } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead
      title={`${title} by Ã“scar A. Montiel | Multimedia Software Engineer`}
      description={description}
      image={heroImage.src}
    />
  </head>
  <body>
    <ModifiedHeader />
    <Navbar />
    <article class="articleContainer">
      <div class="articleBody">
        <h1 class="title">{title}</h1>
        {
          heroImage && (
            <Picture
              src={heroImage}
              alt={description}
              class="heroImage"
              formats={["webp"]}
              decoding="async"
              loading="eager"
              quality={90}
            />
          )
        }
        <slot />
      </div>
    </article>
    <style>
      .heroImage {
        height: 500px;
        object-fit: cover;
        width: 100%;
        padding-bottom: 2rem;
      }
      .heroImage.loaded {
        opacity: 1;
      }
      .title {
        margin: 0;
        padding-bottom: 1rem;
        font-size: 4rem;
        font-family: "Montserrat", sans-serif;
        line-height: 1;
        text-align: end;
      }

      .tools {
        display: block;
        text-align: center;
        font-family: "Open Sans", sans-serif;
        font-size: 0.7rem;
        color: #fdfefe7f;
        padding-bottom: 2rem;
        font-style: bold;
      }

      .articleContainer {
        padding-top: 5vh;
        padding-bottom: 40vh;
        margin: 0 auto;
        position: relative;
        width: 50%;
      }

      .articleBody {
        font-family: "Open Sans", sans-serif;
        color: #fdfefe;
        padding: 0 6rem;
        font-size: 1rem;
      }

      .articleContainer h1 {
        padding: 2rem;
        padding-top: 0;
      }

      hr {
        border-top: 1px solid #ddd;
        margin: 1rem 0;
      }

      @media (max-width: 768px) {
        .title {
          font-size: 2.5rem;
        }
        .articleContainer {
          width: 100%;
        }
        .articleBody {
          padding: 0 1rem;
        }
      }

      @media (max-width: 1920px) {
        .articleContainer {
          width: 60%;
          max-width: 1200px;
        }
      }

      @media (max-width: 480px) {
        .title {
          font-size: 2rem;
          text-align: center;
        }
        .articleContainer {
          width: 100%;
          padding-top: 10vh;
          padding-bottom: 20vh;
        }
        .articleBody {
          padding: 0 0.5rem;
        }
        .heroImage {
          height: 300px;
        }
      }
    </style>
  </body>
</html>
