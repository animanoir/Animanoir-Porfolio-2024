---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import { Picture } from "astro:assets";
import oscar from "@/pages/works/oscar-a-montiel-animanoir-geosmina.jpg";
---

<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>

  <body>
    <Header />
    <div class="container">
      <div class="titleContainer">
        <h1 class="title">I do Visuals and Programming.</h1>
      </div>
      <Picture
        src={oscar}
        alt={"Ã“scar A. Montiel"}
        quality={"max"}
        class={"heroImage"}
        formats={["webp"]}
        decoding="async"
        loading="lazy"
      />
    </div>

    <Footer />
    <style>
      .container {
        padding-bottom: 10rem;
        margin: 0 auto;
        font-family: "Open Sans", sans-serif;
        color: #fdfefe;
        position: relative;
        /* width: 50%; */
      }

      .titleContainer {
        width: 99vw;
        height: 100vh;
      }

      .title {
        position: relative;
        top: 25%;
        left: 50%;
        transform: translate(-50%, -50%);
        font-size: 5rem;
      }

      .heroImage {
        width: 100%;
        height: auto;
        text-align: center;
      }

      .fade-in {
        opacity: 0;
        animation: fadeIn ease-in 1;
        animation-fill-mode: forwards;
        animation-duration: 0.5s;
      }

      @media (max-width: 500px) {
        .container {
          width: 100%;
        }
      }
    </style>
  </body>
</html>
